{% layout "server/layouts/base.liquid" %}

{% block details %}

<main class="detail-container">
  <div class="card">
    <img src="{{ animal.photos[0].medium | default: '/assets/no-image-available.png' }}" alt="{{ animal.name }}" />
    <div class="info">
      <h1>{{ animal.name }}</h1>
      <p><strong>Type:</strong> {{ animal.type }}</p>
      <p><strong>Ras:</strong> {{ animal.breeds.primary }}</p>
      <p><strong>Leeftijd:</strong> {{ animal.age }}</p>
      <p><strong>Geslacht:</strong> {{ animal.gender }}</p>
      <p><strong>Beschrijving:</strong> {{ animal.description | default: 'Geen beschrijving beschikbaar.' }}</p>

      {% if animal.contact.email %}
        <p><strong>Contact:</strong> <a href="mailto:{{ animal.contact.email }}">{{ animal.contact.email }}</a></p>
      {% endif %}

      <a href="/" class="back-link">‚Üê Terug naar overzicht</a>
    </div>
  </div>
</main>

{% endblock %}

{% comment %} {% block content %}
  <h1>Lijst van Dieren</h1>
  <ul>
    {% for animal in petfinderData.animals %}
      <li>{{ animal.name }}</li>
      <li>{{ animal.age }}</li>
      <li>{{ animal.id }}</li>
    {% endfor %}
  </ul>
{% endblock %} {% endcomment %}




