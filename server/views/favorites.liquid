
{% layout "server/layouts/base.liquid" %}

{% block favorites %}
  <section class="favorites">
    <h1>Mijn Favorieten 🐾</h1>

    {% if animals.length == 0 %}
      <p>Je hebt nog geen dieren als favoriet toegevoegd.</p>
    {% else %}
      <ul class="grid">
        {% for animal in animals %}
          <li class="card">
            {% if animal.primary_photo_cropped %}
              <img src="{{ animal.primary_photo_cropped.small }}" alt="{{ animal.name }}">
            {% else %}
              <img src="/assets/no-image-available.png" alt="No image">
            {% endif %}

            <h2>{{ animal.name }}</h2>
            <br>
            <br>
            <a href="/detail/{{ animal.id }}">Bekijk</a>
            
            <form method="POST" action="/favorite">
  <input type="hidden" name="animalId" value="{{ animal.id }}">
  <button type="submit" class="favorite-btn">
    🗑️ Verwijder uit favorieten
  </button>
</form>

          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </section>
{% endblock %}
