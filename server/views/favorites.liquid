
{% layout "server/layouts/base.liquid" %}

{% block favorites %}
  <section class="favorites">
    <h1>My favorites üêæ </h1>

    {% if animals.length == 0 %}
      <p>Je hebt nog geen dieren als favoriet toegevoegd.</p>
    {% else %}

      <ul class="favorite-animals">
        {% for animal in animals %}
          <li>
            {% if animal.primary_photo_cropped %}
              <img src="{{ animal.primary_photo_cropped.small }}" alt="{{ animal.name }}"
              style="view-transition-name: animal-image-{{ animal.id }};"
              >
            {% else %}
              <img src="/assets/no-image-available.png" alt="No image"
              style="view-transition-name: animal-image-{{ animal.id }};"
              >
            {% endif %}

            <h2>{{ animal.name }}</h2>

            <div class="options-animals">
            <a href="/detail/{{ animal.id }}">See more</a>
            
            <form method="POST" action="/favorite">
            <input type="hidden" name="animalId" value="{{ animal.id }}">
            <button type="submit" class="delete-btn">
            Delete
            </button>
          </form>
          </div>

          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </section>
{% endblock %}
