<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% block head %}
    <title>{{ title }}</title>

    {% comment %} google fonts {% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Questrial&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">

  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/client/index.js" defer></script>
  {% else %}
    <link rel="stylesheet" href="/index.css">
    <script src="/index.js" defer></script>

  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
   {% comment %} hier navigatie inzetten {% endcomment %}
  <header>
    <nav>
      <ul>
        <li><a href="/"><img src="/assets/images/main-logo.png" alt=""></a></li>
        <li><a href="/favorites">Favorites</a></li>
      </ul>
    </nav>
  </header>


  <main>
    {% block overview %}{% endblock %}
    {% block details %}{% endblock %}
    {% block favorites %}{% endblock %}
  </main>


     {% comment %} footer styling {% endcomment %}
  <footer>
    <ul>
      <li><img src="/assets/images/main-logo.png" alt="logo NewHome"></li>
    </ul>
  </footer>


</body>
</html>
