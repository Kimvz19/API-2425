<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% block head %}
    <title>{{ title }}</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/client/index.js" defer></script>
  {% else %}
    <link rel="stylesheet" href="/index.css">
    <script src="/index.js" defer></script>
  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
   {% comment %} hier navigatie inzetten {% endcomment %}
  <header>
    <nav>
      <ul>
        <li>NewHome</li>
        <li>Home</li>
        <li>Favorites</li>
        <li>My account</li>
      </ul>
    </nav>
  </header>


  <main>
    {% block overview %}{% endblock %}
    {% block details %}{% endblock %}
  </main>


     {% comment %} footer styling {% endcomment %}
  <footer>
    <ul>
      <li><img src="/assets/logo-tryout.png" alt="logo NewHome"></li>
    </ul>
  </footer>


</body>
</html>
